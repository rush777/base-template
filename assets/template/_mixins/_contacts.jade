mixin contacts(classname, link, items, links)
    address(class=classname)
        ul(class=classname + '__list')
            each item, index in items
                if link
                    li(class=classname + '__item ' + item)
                        a(href='#' class=classname + '__item-link')=links[index]
                else 
                    li(class=classname + '__item ')=item